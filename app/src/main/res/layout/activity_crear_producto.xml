<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código"
        android:inputType="text" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="text" />

    <EditText
        android:id="@+id/etPrecioCosto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio Costo"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etPrecioVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio Venta"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/etStockActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock Actual"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etStockMax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock Máximo"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etStockMin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock Mínimo"
        android:inputType="number" />

    <Button
        android:id="@+id/btnSelectTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipos"/>


    <Button
        android:id="@+id/btnSelectProveedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proveedores"/>

    <Button
        android:id="@+id/btnSelectMarcas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marcas"/>


    <Button
        android:id="@+id/btnSelectModelos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modelos"/>

    <Button
        android:id="@+id/btnCrearProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Producto"
        />

    <Button
        android:id="@+id/btnRegresarCrearProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atrás"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="atrasClick"/>
</LinearLayout>
