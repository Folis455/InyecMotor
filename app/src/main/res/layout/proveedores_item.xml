<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvProveedorNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Proveedor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnVerDetalle" />

    <TextView
        android:id="@+id/tvProveedorDireccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DirecciÃ³n del Proveedor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProveedorNombre"
        app:layout_constraintEnd_toStartOf="@+id/btnVerDetalle" />

    <TextView
        android:id="@+id/tvProveedorTel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tel: 000-000-0000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProveedorDireccion"
        app:layout_constraintEnd_toStartOf="@+id/btnVerDetalle" />

    <TextView
        android:id="@+id/tvProveedorEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email: proveedor@example.com"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProveedorTel"
        app:layout_constraintEnd_toStartOf="@+id/btnVerDetalle" />

    <Button
        android:id="@+id/btnVerDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver detalle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
